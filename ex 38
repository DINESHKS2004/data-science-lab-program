import pandas as pd

# Step 1: Load the dataset
try:
    df = pd.read_csv("city_temperatures.csv")  # Replace with your actual filename
except FileNotFoundError:
    print("âŒ Error: 'city_temperatures.csv' not found.")
    exit()

# Preview dataset
print("\nğŸ“Š Dataset Preview:")
print(df.head())

# Check structure
if 'city' not in df.columns or 'temperature' not in df.columns:
    print("âŒ Dataset must contain 'city' and 'temperature' columns.")
    exit()

# Step 2: Group by city and compute statistics
grouped = df.groupby('city')['temperature']

# Mean temperature for each city
mean_temps = grouped.mean()
print("\nğŸŒ¡ï¸ Mean Temperature by City:")
print(mean_temps)

# Standard deviation for each city
std_devs = grouped.std()
print("\nğŸ“‰ Standard Deviation of Temperature by City:")
print(std_devs)

# Temperature range (max - min) for each city
temp_ranges = grouped.max() - grouped.min()
print("\nğŸ“ˆ Temperature Range (Max - Min) by City:")
print(temp_ranges)

# Step 3: Find the city with the highest temperature range
max_range_city = temp_ranges.idxmax()
print(f"\nğŸ”¥ City with Highest Temperature Range: {max_range_city} ({temp_ranges[max_range_city]:.2f}Â°)")

# Step 4: Find the city with the most consistent temperature
most_consistent_city = std_devs.idxmin()
print(f"â„ï¸ City with Most Consistent Temperature: {most_consistent_city} (Std Dev: {std_devs[most_consistent_city]:.2f}Â°)")
